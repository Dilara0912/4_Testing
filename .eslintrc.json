{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "es2020": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "import/extensions": ["error", "ignorePackages", {
      "js": "always",
      "json": "always",
      "png": "always"
    }],
    "max-len": ["error", { "code": 120 }]
  }
}